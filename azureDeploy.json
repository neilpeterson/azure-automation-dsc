{
	"$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"automationAccountName": {
			"type": "string"
		},
		"adminUsername": {
			"type": "string",
			"metadata": {
				"description": "Username for the Virtual Machine."
			}
		},
		"adminPassword": {
			"type": "securestring",
			"metadata": {
				"description": "Password for the Virtual Machine."
			}
		},
		"vmCount": {
			"type": "int",
			"metadata": {
				"description": "The number of Virtual Machines to create."
			}
		}
	},
	"resources": [
		{
			"apiVersion": "2015-01-01",
			"name": "automationAnalytics",
			"type": "Microsoft.Resources/deployments",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "https://raw.githubusercontent.com/neilpeterson/azure-automation-dsc/master/automationAnalytics.json",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"automationAccountName": {
						"value": "[parameters('automationAccountName')]"
					}
				}
			}
		},
		{
			"apiVersion": "2015-01-01",
			"name": "virtualMachine",
			"type": "Microsoft.Resources/deployments",
			"dependsOn": ["Microsoft.Resources/deployments/automationAnalytics"],
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "https://raw.githubusercontent.com/neilpeterson/azure-automation-dsc/master/virtualMachines.json",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"adminUsername": {
						"value": "[parameters('adminUsername')]"
					},
					"adminPassword": {
						"value": "[parameters('adminPassword')]"
					},
					"vmCount": {
						"value": "[parameters('vmCount')]"
					},
					"automationAccountName": {
						"value": "[reference('automationAnalytics').outputs.automationAccountName.value]"
					},
					"configurationName": {
						"value": "[reference('automationAnalytics').outputs.configurationName.value]"
					},
					"registrationKey": {
						"value": "[reference('automationAnalytics').outputs.registrationKey.value]"
					},
					"registrationUrl": {
						"value": "[reference('automationAnalytics').outputs.registrationUrl.value]"
					},
					"nodeConfigurationName": {
						"value": "[reference('automationAnalytics').outputs.nodeConfigurationName.value]"
					}
				}
			}
		}
	]
}