{
	"$schema": "https://schema.management.azure.com/schemas/2018-05-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"adminUsername": {
			"type": "string"
		},
		"adminPassword": {
			"type": "securestring"
		},
		"VMCount": {
			"type": "int"
		},
		"alertType": {
			"type": "string",
			"allowedValues": [
				"email",
				"MSTeams"
			]
		},
		"email": {
			"type": "string"
		},
		"msTeamsURI": {
			"type": "string"
		}
	},
	"variables": {
		"automationAnalyticsURI": "https://raw.githubusercontent.com/neilpeterson/azure-automation-dsc/master/azure-templates/automation-monitoring/automationAnalytics.json",
		"virtualMachineURI": "https://raw.githubusercontent.com/neilpeterson/azure-automation-dsc/master/azure-templates/core-resources/virtualMachines.json",
		"solutionsURI": "https://raw.githubusercontent.com/neilpeterson/azure-automation-dsc/master/azure-templates/automation-monitoring/automationSolutions.json",
		"linkAccountsURI": "https://raw.githubusercontent.com/neilpeterson/azure-automation-dsc/master/azure-templates/automation-monitoring/linkedWorkspaceAccount.json",
		"azureMonitorAlert": "https://raw.githubusercontent.com/neilpeterson/azure-automation-dsc/master/azure-templates/automation-monitoring/monitorAlert.json",
		"azureMonitorActionGroupURI": "https://raw.githubusercontent.com/neilpeterson/azure-automation-dsc/master/azure-templates/automation-monitoring/monitorActionGroup.json",
		"location": "westeurope"
	},
	"resources": [{
			"apiVersion": "2018-05-01",
			"name": "automationAnalytics",
			"type": "Microsoft.Resources/deployments",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[variables('automationAnalyticsURI')]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"location": {
						"value": "[variables('location')]"
					}
				}
			}
		},
		{
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-05-01",
			"name": "UpdatesSolution",
			"dependsOn": [
				"[concat('Microsoft.Resources/deployments/', 'automationAnalytics')]"
			],
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[variables('solutionsURI')]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"location": {
						"value": "[variables('location')]"
					},
					"workspaceName": {
						"value": "[reference('automationAnalytics').outputs.automationAccountName.value]"
					},
					"solutionName": {
						"value": "Updates"
					}
				}
			}
		},
		{
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-05-01",
			"name": "ChangeTrackingSolution",
			"dependsOn": [
				"[concat('Microsoft.Resources/deployments/', 'automationAnalytics')]"
			],
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[variables('solutionsURI')]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"location": {
						"value": "[variables('location')]"
					},
					"workspaceName": {
						"value": "[reference('automationAnalytics').outputs.automationAccountName.value]"
					},
					"solutionName": {
						"value": "ChangeTracking"
					}
				}
			}
		},
		{
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-05-01",
			"name": "LinkAccountWithWorkspace",
			"dependsOn": [
				"[concat('Microsoft.Resources/deployments/', 'automationAnalytics')]",
				"[concat('Microsoft.Resources/deployments/', 'ChangeTrackingSolution')]",
				"[concat('Microsoft.Resources/deployments/', 'UpdatesSolution')]"
			],
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[variables('linkAccountsURI')]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"accountName": {
						"value": "[reference('automationAnalytics').outputs.automationAccountName.value]"
					},
					"accountResourceGroupName": {
						"value": "[resourceGroup().name]"
					},
					"workspaceName": {
						"value": "[reference('automationAnalytics').outputs.automationAccountName.value]"
					},
					"workspaceRegion": {
						"value": "[variables('location')]"
					}
				}
			}
		},
		{
			"apiVersion": "2018-05-01",
			"name": "virtualMachine",
			"type": "Microsoft.Resources/deployments",
			"dependsOn": ["Microsoft.Resources/deployments/automationAnalytics"],
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[variables('virtualMachineURI')]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"adminUsername": {
						"value": "[parameters('adminUsername')]"
					},
					"adminPassword": {
						"value": "[parameters('adminPassword')]"
					},
					"vmCount": {
						"value": "[parameters('vmCount')]"
					},
					"registrationKey": {
						"value": "[reference('automationAnalytics').outputs.registrationKey.value]"
					},
					"registrationUrl": {
						"value": "[reference('automationAnalytics').outputs.registrationUrl.value]"
					},
					"nodeConfigurationName": {
						"value": "[reference('automationAnalytics').outputs.nodeConfigurationName.value]"
					},
					"logAnalyticsName": {
						"value": "[reference('automationAnalytics').outputs.automationAccountName.value]"
					}
				}
			}
		},
		{
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-05-01",
			"name": "AzureMonitorActionGroup",
			"dependsOn": [],
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[variables('azureMonitorActionGroupURI')]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"email": {
						"value": "[parameters('email')]"
					}
				}
			}
		},
		{
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-05-01",
			"name": "AzureMonitorAlert",
			"dependsOn": [
				"[concat('Microsoft.Resources/deployments/', 'virtualMachine')]"
			],
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[variables('azureMonitorAlert')]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"targetResourceGroup": {
						"value": "[resourceGroup().id]"
					},
					"actionGroupId": {
						"value": "[reference('AzureMonitorActionGroup').outputs.actionGroupId.value]"
					}
				}
			}
		}
	]
}